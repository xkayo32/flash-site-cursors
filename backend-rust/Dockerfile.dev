# Development Dockerfile for Rust backend
FROM rust:1.79-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy dependencies manifests
COPY Cargo.toml ./

# Create src directory with dummy main
RUN mkdir src && echo "fn main() {}" > src/main.rs

# Build dependencies (this will be cached)
RUN cargo build --release || true

# Copy actual source code
COPY src ./src
COPY .env ./

# Build the application
RUN touch src/main.rs && cargo build --release || true

# If build fails, at least create a simple server
RUN if [ ! -f target/release/estudos-backend-rust ]; then \
    echo 'fn main() { println!("Build failed, running fallback"); }' > src/main.rs && \
    cargo build --release; \
    fi

EXPOSE 8180

# Try to run the built binary, fallback to cargo run if needed
CMD ["sh", "-c", "if [ -f target/release/estudos-backend-rust ]; then ./target/release/estudos-backend-rust; else cargo run --release; fi"]